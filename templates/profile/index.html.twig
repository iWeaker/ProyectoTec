{% extends 'base.html.twig' %}

{% block title %}Perfil{% endblock %}
{% block stylesheets %}
    <link href="{{ asset('/css/header.css') }}" rel="stylesheet" />
    <link href="{{ asset('/css/profile.css') }}" rel="stylesheet" />
{% endblock %}
{% block javascripts %}
    <script type="text/javascript" src="{{ asset('/js/jquery.js') }}"></script>
    <script type="text/javascript" src="{{ asset('/js/profileEffect.js') }}"></script>

{% endblock %}
{% block body %}
    {% include 'header/index.html.twig' %}
    <section>
        <div class="top-section">
            <div class="profile-cover">

                <div class="profile-img-cover" style="background-image: url({{ asset('userCover/' ~ app.user.id ~ '.jpg') }})"></div>

                <div class="profile-detail-section">
                    <nav>
                        <li>Timeline</li>
                        <li>Acerca</li>
                        <li>Siguiendo</li>
                        <li></li>
                        <li></li>
                        <li>Fotos</li>
                        <li>Favoritos</li>
                        <li>Config</li>
                    </nav>
                </div>
                <div class="profile-desc">
                    <div class="profile-img" style="background-image: url({{ asset('userProfiles/' ~ app.user.id ~ '.jpg') }})"></div>
                    <div class="profile-name">
                        {% if name|default(null) %}
                            <span>{{ name }}</span>
                        {% else %}
                            <span>{{ app.user.user }} {{ app.user.lastM }} {{ app.user.lastF }}</span>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
        <div class="bottom-section">
            <div class="profile-content">
                <!-- Aqui estara la plantilla de los post  -->
                <div class="container-post">
                    <div class="container-post-upper">
                        <div class="upper-post-left">
                            <div class="photo-post-user" >
                                <div class="photo-p-user" style="background-image: url({{ asset('userProfiles/' ~ app.user.id ~ '.jpg') }})"></div>
                            </div>
                            <div class="name-post-user">
                                <p>Alejandro Bringas Martinez</p>
                                <p>19 horas antes</p>
                            </div>
                        </div>
                        <div class="upper-post-right">
                            <img src="{{ asset('img/menu.png') }}" height="20" alt="">
                        </div>
                    </div>
                    <div class="container-post-middle">
                        <p>aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa</p>
                        <p>aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa</p>
                        <p>aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa</p>
                        <p>aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa</p>
                        <p>aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa</p>
                        <p>aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa</p>

                    </div>
                    <div class="container-post-bottom"></div>
                </div>
            

                <!-- -->
            </div>
        </div>
    </section>
{% endblock %}
