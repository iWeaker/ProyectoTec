<script type="text/javascript">

    $('#add-group').on("submit",function(event) {
        event.preventDefault();
        $.ajax({
            type: 'POST',
            url: '{{ path('newgroup')}}',
            processData: false,
            contentType: false,
            data: new FormData(this),
            dataType: 'json',
            success: function(pChange) {
                $.sweetModal({
                    content: 'Creado con exito.',
                    icon: $.sweetModal.ICON_SUCCESS,
                    onClose: function(){
                        location.href="{{ path('group') }}"
                    },
                });
            },
        });
    });
</script>

